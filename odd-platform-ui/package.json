{
  "name": "odd-platform-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build-only": "react-scripts build",
    "build": "npm run generate && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tsc": "tsc",
    "generate": "rm -rf ./src/generated-sources && docker run -v `pwd`/..:/mnt -w /mnt --rm openapitools/openapi-generator-cli:v5.1.1 generate -c odd-platform-ui/openapi-config.yaml",
    "lint": "eslint --ext .tsx,.ts src/",
    "lint:fix": "eslint --ext .tsx,.ts src/ --fix"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint -c .eslintrc.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc --noEmit && lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "transformIgnorePatterns": [
      "\\\"node_modules/(?!@amcharts)/\\\""
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@mui/lab": "^5.0.0-alpha.48",
    "@mui/material": "^5.4.2",
    "@mui/system": "^5.0.4",
    "@reduxjs/toolkit": "^1.5.0",
    "d3-hierarchy": "^2.0.0",
    "d3-interpolate": "^3.0.1",
    "d3-selection": "^2.0.0",
    "d3-shape": "^3.0.1",
    "d3-zoom": "^2.0.0",
    "date-fns": "^2.28.0",
    "github-markdown-css": "^4.0.0",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.27.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-json-tree": "^0.15.0",
    "react-markdown": "^5.0.3",
    "react-mde": "^11.5.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.2.0",
    "react-truncate-markup": "^5.1.0",
    "react-virtualized": "^9.22.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "remark-gfm": "^1.0.0",
    "reselect": "^4.1.5",
    "styled-components": "^5.3.3",
    "typesafe-actions": "^5.1.0",
    "use-debounce": "^7.0.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/classnames": "^2.2.11",
    "@types/d3": "^6.3.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.19.9",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.11",
    "@types/react-router-dom": "^5.3.0",
    "@types/react-virtualized": "^9.21.18",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/styled-components": "^5.1.15",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-lodash": "^7.3.0",
    "eslint-plugin-mui-unused-classes": "^1.0.3",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.5"
  }
}
