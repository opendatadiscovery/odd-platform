{
  "name": "odd-platform-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build-only": "react-scripts build",
    "build": "npm run generate && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tsc": "tsc",
    "generate": "rm -rf ./src/generated-sources && docker run -v `pwd`/..:/mnt -w /mnt --rm ghcr.io/opendatadiscovery/openapi-generator-cli:latest generate -c odd-platform-ui/openapi-config.yaml",
    "lint": "eslint --ext .tsx,.ts src/",
    "lint:fix": "eslint --ext .tsx,.ts src/ --fix"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint -c .eslintrc.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc --noEmit && lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@material-ui/pickers": "^3.3.10",
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/classnames": "^2.2.11",
    "@types/d3": "^6.3.0",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.19.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.11",
    "@types/react-router-dom": "^5.1.6",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "classnames": "^2.2.6",
    "d3-hierarchy": "^2.0.0",
    "d3-selection": "^2.0.0",
    "d3-shape": "^3.0.1",
    "d3-zoom": "^2.0.0",
    "date-fns": "^2.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-mui-unused-classes": "^1.0.3",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "github-markdown-css": "^4.0.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.21",
    "node-sass": "^4.0.0",
    "prettier": "^2.2.1",
    "query-string": "^6.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^7.6.6",
    "react-infinite-scroll-component": "^6.1.0",
    "react-json-tree": "^0.15.0",
    "react-markdown": "^5.0.3",
    "react-mde": "^11.1.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "react-tooltip": "^4.2.21",
    "react-truncate-markup": "^5.1.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "remark-gfm": "^1.0.0",
    "reselect": "^4.0.0",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.2.4",
    "use-debounce": "^6.0.0",
    "uuid": "^3.4.0"
  }
}
