{
  "name": "odd-platform",
  "version": "1.0.0",
  "description": "<p>  <img src=\"./images/open-data-discovery-platform-odd-logo.png\" width=\"600px\" alt=\"open-data-discovery-logo\"/>&nbsp; </p>",
  "main": "index.js",
  "directories": {
    "doc": "../docs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./dist/",
    "clean-build": "npm run clean && npm run build",
    "odd-up": "docker/up-platform.sh",
    "odd-down": "docker-compose -f ./docker/docker-compose.yaml down --volume",
    "test": "npm run clean-build; ENVIRONMENT=main_test playwright test --workers=1 --headed",
    "test:ci": "npm run clean-build; ENVIRONMENT=main_test playwright test",
    "test:debug": "npm run clean-build; ENVIRONMENT=main_test playwright test --workers=1 --headed --debug",
    "lint": "eslint .",
    "lint:ci": "npx eslint --quiet .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint --fix . && npm run format",
    "prepare": "cd ../ && husky install ./tests/.husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendatadiscovery/odd-platform.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/opendatadiscovery/odd-platform/issues"
  },
  "homepage": "https://github.com/opendatadiscovery/odd-platform#readme",
  "prettier": "@awesome-code-style/prettier-config",
  "dependencies": {
    "@playwright/test": "^1.24.2",
    "allure-js-commons": "^2.0.0-beta.14",
    "allure-playwright": "^2.0.0-beta.14",
    "axios-logger": "^2.5.0",
    "chalk": "4.1.1",
    "convert": "^2.2.0",
    "convert-excel-to-json": "^1.7.0",
    "docx": "^6.0.3",
    "docxtemplater": "^3.28.6",
    "esbuild": "^0.14.20",
    "exceljs": "^4.3.0",
    "get-port": "^6.1.2",
    "glob": "^7.2.0",
    "html-to-text": "^8.2.0",
    "hygen": "^6.1.0",
    "lighthouse": "^9.5.0",
    "pdfkit": "^0.12.1",
    "pdfreader": "^2.0.0",
    "pizzip": "3.0.6",
    "playwright-lighthouse": "^2.1.1",
    "prom-client": "^13.2.0",
    "xregexp": "^5.1.0"
  },
  "devDependencies": {
    "@awesome-code-style/prettier-config": "^3.0.0",
    "@types/axios": "0.14.0",
    "@types/chai": "4.2.21",
    "@types/faker": "5.5.7",
    "@types/pdfkit": "^0.12.6",
    "@types/pizzip": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "async-wait-until": "2.0.5",
    "axios": "^0.21.4",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "docx4js": "^3.2.20",
    "dotenv": "10.0.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-playwright": "^0.11.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
