{
  "editor.tabSize": 2,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // OR "ms-vscode.vscode-typescript-tslint-plugin"
  },
  "json.format.enable": false, // Toggle default formatter for .json files (requires restart; required for [json])
  "editor.formatOnSave": true, // Format a file on save (required for [json] and [javascript])
  "files.associations": {
    "*.json": "jsonc"
  },
  "[markdown]": {
    "editor.formatOnSave": false
  }
}
