{
  "$id": "https://ditro.io/policy.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Policy",
  "type": "object",
  "properties": {
    "statements": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/policy_statement"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "statements"
  ],
  "$defs": {
    "policy_statement": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resource": {
          "$ref": "#/$defs/policy_resource"
        },
        "permissions": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/term_permissions"
              },
              {
                "$ref": "#/$defs/data_entity_permission"
              },
              {
                "$ref": "#/$defs/management_permissions"
              },
              {
                "$ref": "#/$defs/all_permissions"
              }
            ]
          },
          "minItems": 1
        }
      },
      "required": [
        "resource",
        "permissions"
      ],
      "allOf": [
        {
          "if": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "object",
                "properties": {
                  "type": {
                    "const": "DATA_ENTITY"
                  }
                },
                "required": [
                  "type"
                ]
              }
            },
            "required": [
              "resource"
            ]
          },
          "then": {
            "properties": {
              "permissions": {
                "items": {
                  "anyOf": [
                    {
                      "$ref": "#/$defs/data_entity_permission"
                    },
                    {
                      "$ref": "#/$defs/all_permissions"
                    }
                  ]
                }
              }
            }
          }
        },
        {
          "if": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "object",
                "properties": {
                  "type": {
                    "const": "TERM"
                  }
                },
                "required": [
                  "type"
                ]
              }
            },
            "required": [
              "resource"
            ]
          },
          "then": {
            "properties": {
              "permissions": {
                "items": {
                  "anyOf": [
                    {
                      "$ref": "#/$defs/term_permissions"
                    },
                    {
                      "$ref": "#/$defs/all_permissions"
                    }
                  ]
                }
              }
            }
          }
        },
        {
          "if": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "object",
                "properties": {
                  "type": {
                    "const": "MANAGEMENT"
                  }
                },
                "required": [
                  "type"
                ]
              }
            },
            "required": [
              "resource"
            ]
          },
          "then": {
            "properties": {
              "permissions": {
                "items": {
                  "anyOf": [
                    {
                      "$ref": "#/$defs/management_permissions"
                    },
                    {
                      "$ref": "#/$defs/all_permissions"
                    }
                  ]
                }
              }
            }
          }
        }
      ]
    },
    "policy_resource": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "$ref": "#/$defs/policy_resource_type"
        },
        "conditions": {
          "anyOf": [
            {
              "$ref": "#/$defs/term_policy_resource_condition"
            },
            {
              "$ref": "#/$defs/data_entity_policy_resource_condition"
            }
          ]
        }
      },
      "required": [
        "type"
      ],
      "allOf": [
        {
          "if": {
            "type": "object",
            "properties": {
              "type": {
                "const": "MANAGEMENT"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "not": {
              "required": [
                "conditions"
              ]
            }
          }
        },
        {
          "if": {
            "type": "object",
            "properties": {
              "type": {
                "const": "DATA_ENTITY"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "properties": {
              "conditions": {
                "$ref": "#/$defs/data_entity_policy_resource_condition"
              }
            }
          }
        }
      ]
    },
    "data_entity_policy_resource_condition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "all": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/data_entity_policy_resource_condition"
          }
        },
        "any": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/data_entity_policy_resource_condition"
          }
        },
        "eq": {
          "$ref": "#/$defs/data_entity_policy_resource_condition_unary"
        },
        "not_eq": {
          "$ref": "#/$defs/data_entity_policy_resource_condition_unary"
        },
        "match": {
          "$ref": "#/$defs/data_entity_policy_resource_condition_unary"
        },
        "not_match": {
          "$ref": "#/$defs/data_entity_policy_resource_condition_unary"
        },
        "is": {
          "$ref": "#/$defs/data_entity_resource_condition_key"
        },
        "not_is": {
          "$ref": "#/$defs/data_entity_resource_condition_key"
        }
      },
      "anyOf": [
        {
          "required": [
            "all"
          ]
        },
        {
          "required": [
            "any"
          ]
        },
        {
          "required": [
            "eq"
          ]
        },
        {
          "required": [
            "not_eq"
          ]
        },
        {
          "required": [
            "match"
          ]
        },
        {
          "required": [
            "not_match"
          ]
        },
        {
          "required": [
            "is"
          ]
        },
        {
          "required": [
            "not_is"
          ]
        }
      ]
    },
    "data_entity_policy_resource_condition_unary": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/$defs/data_entity_resource_condition_key"
      },
      "maxProperties": 1,
      "minProperties": 1
    },
    "term_policy_resource_condition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "all": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/term_policy_resource_condition"
          }
        },
        "any": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/term_policy_resource_condition"
          }
        },
        "eq": {
          "$ref": "#/$defs/term_policy_resource_condition_unary"
        },
        "not_eq": {
          "$ref": "#/$defs/term_policy_resource_condition_unary"
        },
        "match": {
          "$ref": "#/$defs/term_policy_resource_condition_unary"
        },
        "not_match": {
          "$ref": "#/$defs/term_policy_resource_condition_unary"
        },
        "is": {
          "$ref": "#/$defs/term_resource_condition_key"
        },
        "not_is": {
          "$ref": "#/$defs/term_resource_condition_key"
        }
      },
      "anyOf": [
        {
          "required": [
            "all"
          ]
        },
        {
          "required": [
            "any"
          ]
        },
        {
          "required": [
            "eq"
          ]
        },
        {
          "required": [
            "not_eq"
          ]
        },
        {
          "required": [
            "match"
          ]
        },
        {
          "required": [
            "not_match"
          ]
        },
        {
          "required": [
            "is"
          ]
        },
        {
          "required": [
            "not_is"
          ]
        }
      ]
    },
    "term_policy_resource_condition_unary": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/$defs/term_resource_condition_key"
      },
      "maxProperties": 1,
      "minProperties": 1
    },
    "data_entity_resource_condition_key": {
      "type": "string",
      "enum": [
        "dataEntity:oddrn",
        "dataEntity:internalName",
        "dataEntity:externalName",
        "dataEntity:type",
        "dataEntity:class",
        "dataEntity:datasource:oddrn",
        "dataEntity:datasource:name",
        "dataEntity:namespace:name",
        "dataEntity:tag:name",
        "dataEntity:owner",
        "dataEntity:owner:title"
      ]
    },
    "term_resource_condition_key": {
      "type": "string",
      "enum": [
        "term:name",
        "term:namespace:name",
        "term:tag:name",
        "term:owner",
        "term:owner:title"
      ]
    },
    "data_entity_permission": {
      "type": "string",
      "enum": [
        "DATA_ENTITY_INTERNAL_NAME_UPDATE",
        "DATA_ENTITY_CUSTOM_METADATA_CREATE",
        "DATA_ENTITY_CUSTOM_METADATA_UPDATE",
        "DATA_ENTITY_CUSTOM_METADATA_DELETE",
        "DATA_ENTITY_DESCRIPTION_UPDATE",
        "DATA_ENTITY_OWNERSHIP_CREATE",
        "DATA_ENTITY_OWNERSHIP_UPDATE",
        "DATA_ENTITY_OWNERSHIP_DELETE",
        "DATA_ENTITY_ADD_TO_GROUP",
        "DATA_ENTITY_DELETE_FROM_GROUP",
        "DATA_ENTITY_TAGS_UPDATE",
        "DATA_ENTITY_ADD_TERM",
        "DATA_ENTITY_DELETE_TERM",
        "DATA_ENTITY_ALERT_RESOLVE",
        "DATA_ENTITY_ALERT_CONFIG_UPDATE",
        "DATASET_TEST_RUN_SET_SEVERITY",
        "DATASET_FIELD_DESCRIPTION_UPDATE",
        "DATASET_FIELD_LABELS_UPDATE",
        "DATASET_FIELD_ENUMS_UPDATE",
        "DATASET_FIELD_ADD_TERM",
        "DATASET_FIELD_DELETE_TERM",
        "DATA_ENTITY_GROUP_UPDATE",
        "DATA_ENTITY_GROUP_DELETE",
        "DATA_ENTITY_ATTACHMENT_MANAGE"
      ]
    },
    "term_permissions": {
      "type": "string",
      "enum": [
        "TERM_UPDATE",
        "TERM_DELETE",
        "TERM_TAGS_UPDATE",
        "TERM_OWNERSHIP_CREATE",
        "TERM_OWNERSHIP_UPDATE",
        "TERM_OWNERSHIP_DELETE"
      ]
    },
    "management_permissions": {
      "type": "string",
      "enum": [
        "DATA_ENTITY_GROUP_CREATE",
        "TERM_CREATE",
        "DATA_SOURCE_CREATE",
        "DATA_SOURCE_UPDATE",
        "DATA_SOURCE_DELETE",
        "DATA_SOURCE_TOKEN_REGENERATE",
        "COLLECTOR_CREATE",
        "COLLECTOR_UPDATE",
        "COLLECTOR_DELETE",
        "COLLECTOR_TOKEN_REGENERATE",
        "NAMESPACE_CREATE",
        "NAMESPACE_UPDATE",
        "NAMESPACE_DELETE",
        "TAG_CREATE",
        "TAG_UPDATE",
        "TAG_DELETE",
        "LABEL_CREATE",
        "LABEL_UPDATE",
        "LABEL_DELETE",
        "OWNER_CREATE",
        "OWNER_UPDATE",
        "OWNER_DELETE",
        "OWNER_ASSOCIATION_MANAGE",
        "DIRECT_OWNER_SYNC",
        "POLICY_CREATE",
        "POLICY_UPDATE",
        "POLICY_DELETE",
        "ROLE_CREATE",
        "ROLE_UPDATE",
        "ROLE_DELETE"
      ]
    },
    "all_permissions": {
      "type": "string",
      "enum": [
        "ALL"
      ]
    },
    "policy_resource_type": {
      "type": "string",
      "enum": [
        "DATA_ENTITY",
        "TERM",
        "MANAGEMENT"
      ]
    }
  }
}